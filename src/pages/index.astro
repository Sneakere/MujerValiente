					<div class="flex items-center">
						<img
							class="h-20 md:h-28"
							src="/MujerValiente/logo-mujer-otro.png"
							alt=""
						/>
					</div>

					<!-- Menu (Desktop) -->
					<div class="hidden md:flex space-x-8 items-center">
						<a
							href="#inicio"
							class="text-gray-600 hover:text-[#e784b0] text-xl"
							>Mujer Valiente al Volante</a
						>
